<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_right_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center|left"
            android:text="疾病名称:" />

        <EditText
            android:id="@+id/sick_name_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:background="@null"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/choice_sick_time_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center|left"
            android:text="患病时间:" />

        <TextView
            android:id="@+id/sick_time_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:background="@null"
            android:gravity="center|left" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:text="疾病史说明:" />

        <EditText
            android:id="@+id/sick_information_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:gravity="center"
            android:background="@null"
            android:inputType="textMultiLine" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <include
        layout="@layout/bottom_btn"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/noglay" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:gravity="center|left"
        android:orientation="vertical">


        <TextView
            android:id="@+id/add_image_tv"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@color/noglay"
            android:gravity="center"
            android:text="+"
            android:textSize="@dimen/textSize_20sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/post_img"
                android:layout_width="130dp"
                android:layout_height="130dp" />

            <ImageView
                android:id="@+id/post_two_img"
                android:layout_width="130dp"
                android:layout_height="130dp" />

            <ImageView
                android:id="@+id/post_three_img"
                android:layout_width="130dp"
                android:layout_height="130dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_image_tv"
            android:gravity="center"
            android:text="上传图片" />
    </RelativeLayout>


</LinearLayout>