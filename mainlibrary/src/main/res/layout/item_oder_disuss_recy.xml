<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/talkout_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/talk_user_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/chat_man" />

            <TextView
                android:id="@+id/talk_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:text="用户123"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/talk_state_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:text="好评"
                android:textColor="@color/yelllow"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/talk_information_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="65dp"
            android:text="不错哦，服务非常好！"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>


</androidx.cardview.widget.CardView>