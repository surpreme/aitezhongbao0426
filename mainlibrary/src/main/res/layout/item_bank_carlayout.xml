<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeMenuLayout"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="@dimen/margin_5dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="@dimen/margin_5dp"
    android:background="@drawable/round_background_gray"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/round_background_doctor_blue"
        android:gravity="center_vertical"
        android:paddingStart="19dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/tv_item_bankname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margin_20dp"
            android:text="中国银行"
            android:textColor="@color/white"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_banknumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:gravity="right|center"
            android:paddingRight="35dp"
            android:text="**** **** **** 4124"
            android:textColor="@color/white"
            android:textSize="27sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/allglay"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="删除"
        android:textColor="@color/black"
        android:textSize="14sp" />
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
