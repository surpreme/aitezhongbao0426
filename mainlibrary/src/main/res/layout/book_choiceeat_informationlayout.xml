<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/noglay" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/book_state_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="订单已完成"
                    android:textColor="#ff333333"
                    android:textSize="22sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/noglay" />

            <TextView
                android:id="@+id/book_information_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:text="王一一  16659595959"
                android:textColor="#ff333333"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/glay" />

            <TextView
                android:id="@+id/book_eat_time_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:text="用餐日期:"
                android:textColor="#ff333333"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/glay" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="bottom|left"
                android:layout_marginBottom="15dp"
                android:paddingLeft="15dp"
                android:text="菜品详情"
                android:textColor="@color/blue"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/noglay" />

            <include layout="@layout/recy_layout" />

            <TextView
                android:id="@+id/all_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="实付款：￥100.00"
                android:textColor="#ffff2d2b"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/noglay" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:text="订单信息"
                android:textColor="@color/blue"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/noglay" />

            <TextView
                android:id="@+id/book_number_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:text="订单编号："
                android:textColor="#ff333333"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/noglay" />

            <TextView
                android:id="@+id/time_create_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:text="下单时间："
                android:textColor="#ff333333"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/noglay" />

            <TextView
                android:id="@+id/pay_away_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:text="支付方式："
                android:textColor="#ff333333"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/noglay" />

            <TextView
                android:id="@+id/pay_number_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:text="第三方支付交易号："
                android:textColor="#ff333333"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/noglay" />

            <TextView
                android:id="@+id/book_dispute_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:text="服务投诉"
                android:textColor="#ffffb400"
                android:textSize="15sp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/noglay" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/message_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@mipmap/msg_gray" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系服务商"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/call_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@mipmap/call_gray" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="拨打电话"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:gravity="center|right"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/delete_order_tv"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/juxing_gray_background"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/pay_order_tv"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/juxing_gray_background"
            android:gravity="center"
            android:text="去付款"
            android:textColor="@color/orange"
            android:textSize="14sp" />


    </LinearLayout>


</LinearLayout>
