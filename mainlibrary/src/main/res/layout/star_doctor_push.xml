<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/noglay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/search_bg"
        android:padding="@dimen/padding_8dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:src="@drawable/seacher" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:gravity="center|left"
            android:text="@string/search_hint" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_nationwide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全国"
                android:textColor="@color/text1"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="12dp"
                    app:srcCompat="@drawable/top" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_division"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科室"
                android:textColor="@color/text1"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="12dp"
                    app:srcCompat="@drawable/top" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sales"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销量"
                android:textColor="@color/text1"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/buy_choice_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/buy_top_img"
                    android:layout_width="20dp"
                    android:layout_height="12dp"
                    app:srcCompat="@drawable/top" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_screen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/away_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="筛选"
                android:textColor="@color/text1"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/away_choice_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/away_top_img"
                    android:layout_width="20dp"
                    android:layout_height="12dp"
                    app:srcCompat="@drawable/low" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/smart_refresh_layout" />
</LinearLayout>
