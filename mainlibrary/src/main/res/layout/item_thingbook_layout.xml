<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_10dp"
    android:layout_marginTop="@dimen/margin_3dp"
    android:layout_marginRight="@dimen/margin_10dp"
    android:layout_marginBottom="@dimen/margin_3dp"
    android:background="@color/noglay"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_15dp">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="top|left"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/icon_iv"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_gravity="right"
                    android:scaleType="fitXY"
                    app:srcCompat="@mipmap/chat_women" />
            </androidx.cardview.widget.CardView>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_15dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:text="助医服务"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/state_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="15dp"
                        android:text="已完成"
                        android:textColor="@color/yelllow"
                        android:textSize="18sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="￥100.0"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="15dp">


                    <View
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/information_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=" 合计："
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/price_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="right|center"
                            android:text="￥100.00"
                            android:textColor="#ffff2d2b"
                            android:textSize="13sp" />
                    </LinearLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="right|bottom"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:background="@drawable/juxing_background_yellow"
                android:gravity="center"
                android:text="提交信息"
                android:textSize="@dimen/textSize_13sp" />


            <TextView
                android:id="@+id/look_information_tv"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:background="@drawable/juxing_background_yellow"
                android:gravity="center"
                android:text="查看详情"
                android:textSize="@dimen/textSize_13sp" />


            <TextView
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:background="@drawable/juxing_background_blue"
                android:gravity="center"
                android:text="评价"
                android:textSize="@dimen/textSize_13sp"
                android:visibility="gone" />


            <TextView
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:background="@drawable/juxing_background_yellow"
                android:gravity="center"
                android:text="取消订单"
                android:textSize="@dimen/textSize_13sp" />


            <TextView
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:gravity="center"
                android:text="去付款"
                android:textColor="@color/red" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="15dp"
            android:text="待付款"
            android:textColor="@color/yelllow"
            android:textSize="18sp"
            android:visibility="gone" />


        <!--    <fragment-->
        <!--        android:id="@+id/fragment"-->
        <!--        android:name="com.aite.mainlibrary.fragment.daybookchridren.daybooklist.DaybooklistFragment"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="match_parent" />-->

    </LinearLayout>

</androidx.cardview.widget.CardView>