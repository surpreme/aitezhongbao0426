<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/popup_bg1"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/shut_icon" />


    <EditText
        android:id="@+id/et_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_close"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg1_edit"
        android:hint="咨询时长"
        android:padding="@dimen/dp_10"
        android:textColor="#999999"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/et_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_time"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg1_edit"
        android:hint="咨询价格"
        android:padding="@dimen/dp_10"
        android:textColor="#999999"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_price"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="30dp"
        android:background="@drawable/but_bg1"
        android:gravity="center"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="13sp" />


</RelativeLayout>