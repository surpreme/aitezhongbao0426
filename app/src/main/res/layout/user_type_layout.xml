<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择身份"
            android:textColor="@color/titleblack"
            android:textSize="18sp" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/log_img_id"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/logo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="17dp" />

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="会员"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <CheckBox
                        android:id="@+id/people_chex"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:button="@drawable/check_state"
                        android:checked="true"
                        android:visibility="gone"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/select"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="义工"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <CheckBox
                        android:id="@+id/worker_chex"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="right|center"
                        android:button="@drawable/check_state" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="护工"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <CheckBox
                        android:id="@+id/girldoctor_chex"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="right|center"
                        android:button="@drawable/check_state" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="医生"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <CheckBox
                        android:id="@+id/doctor_chex"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="right|center"
                        android:button="@drawable/check_state" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/doctor_post_msg_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/person_book_first_tv"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="+"
                            android:textSize="25sp" />


                        <TextView
                            android:id="@+id/person_book_sencond_tv"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_toRightOf="@+id/person_book_first_tv"
                            android:gravity="center"
                            android:text="+"
                            android:textSize="25sp" />

                        <ImageView
                            android:id="@+id/person_book_first_img"
                            android:layout_width="150dp"
                            android:layout_height="match_parent" />


                        <ImageView
                            android:id="@+id/person_book_sencond_img"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/person_book_first_img" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="上传医师资格证（正）"
                            android:textColor="#ff666666"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="上传医师资格证（反）"
                            android:textColor="#ff666666"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/work_book_first_tv"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="+"
                            android:textSize="25sp" />


                        <TextView
                            android:id="@+id/work_book_second_tv"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_toRightOf="@+id/work_book_first_tv"
                            android:gravity="center"
                            android:text="+"
                            android:textSize="25sp" />

                        <ImageView
                            android:id="@+id/work_book_first_img"
                            android:layout_width="150dp"
                            android:layout_height="match_parent" />


                        <ImageView
                            android:id="@+id/work_book_second_img"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/work_book_first_img" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="本人手持工作证（正）"
                            android:textColor="#ff666666"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="本人手持工作证（反）"
                            android:textColor="#ff666666"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="335dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <Button
                    android:id="@+id/next_btn"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/critle_round_background_blue"
                    android:gravity="center"
                    android:text="完成"
                    android:textColor="#ffffffff"
                    android:textSize="13sp" />


            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
