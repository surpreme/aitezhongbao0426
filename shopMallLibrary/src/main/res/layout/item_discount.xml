<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_item"
        android:layout_alignTop="@+id/ll_item"
        android:gravity="center"
        android:text="1"
        android:layout_marginLeft="10dp"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_index"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rules_number"
            android:layout_alignTop="@+id/ed_number"
            android:layout_alignBottom="@+id/ed_number"
            android:gravity="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ed_number"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_number"
            android:gravity="center_vertical"
            android:background="@drawable/release_goods2"
            android:paddingLeft="5dp"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rules"

            android:layout_below="@+id/tv_number"
            android:gravity="center"
            android:layout_alignTop="@+id/ed_rules"
            android:layout_alignBottom="@+id/ed_rules"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ed_rules"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/tv_rules"
            android:layout_below="@+id/tv_number"
            android:layout_marginTop="5dp"
            android:background="@drawable/release_goods2"
            android:paddingLeft="5dp"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ed_rules"
            android:layout_alignTop="@+id/ed_rules"
            android:layout_alignBottom="@+id/ed_rules"
            android:gravity="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_remove"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/ed_number"
            android:text="@string/rules_remove"
            android:layout_below="@+id/ed_rules"
            android:textColor="@color/white"
            android:background="@drawable/release_goods5"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_item"
        android:background="#f2f2f2">
    </View>
</RelativeLayout>
