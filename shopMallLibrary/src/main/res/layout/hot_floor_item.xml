<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/hot_floor_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/hot_floor_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/hot_floor_img"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:lines="2"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/hot_floor_price_tx"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/hot_floor_name"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="bottom"
        android:text="ï¿¥"
        android:textColor="@color/red"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/hot_floor_price"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/hot_floor_price_tx"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/hot_floor_price_tx"
        android:textColor="@color/red"
        android:textSize="15sp" />

</RelativeLayout>