<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/iv_orderimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/no_image" />

        <TextView
            android:id="@+id/order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_orderimg"
            android:ellipsize="end"
            android:lines="2"
            android:text="加载中..."
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_dj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/order_name"
            android:layout_below="@+id/order_name"
            android:layout_marginTop="5dp"
            android:text="@string/find_reminder197"
            android:textColor="@color/txtcolor"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_orderprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_dj"
            android:layout_toRightOf="@+id/tv_dj"
            android:text="￥0.00"
            android:textColor="@color/red"
            android:textSize="12dp" />

        
        <TextView
            android:id="@+id/tv_goodsnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/order_name"
            android:layout_below="@+id/tv_dj"
            android:layout_marginTop="5dp"
            android:text="商品数目 : "
            android:textColor="@color/txtcolor"
            android:textSize="12dp" />
    </RelativeLayout>

</LinearLayout>