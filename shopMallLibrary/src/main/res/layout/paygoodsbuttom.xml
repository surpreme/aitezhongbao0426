<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_totalprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_preview"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_pricee1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/find_reminder303" />

        <TextView
            android:id="@+id/tv_pricee2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/tv_pricee1"
            android:text="0"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/tv_zongjia1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/tv_pricee2"
            android:text="\t订单总价  :" />

        <TextView
            android:id="@+id/tv_zongj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/tv_zongjia1"
            android:text="200"
            android:textColor="@color/red" />
    </RelativeLayout>

</LinearLayout>