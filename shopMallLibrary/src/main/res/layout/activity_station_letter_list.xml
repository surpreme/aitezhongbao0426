<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.aite.a.view.CustomToolBar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:barBackground="@color/orangeyellow"
        app:left_btn_src="@drawable/btn_back_selector"
        app:left_btn_visible="true"
        app:right_btn_src="@drawable/btn_bottom_arrow_selector"
        app:right_btn_visible="true"
        app:title_text="@string/received_station_letter"
        app:title_visible="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tv_nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:visibility="gone"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="@string/act_no_data_load" />

        <ListView
            android:id="@+id/lv_station_letter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            
            android:divider="@color/transparent"
            android:dividerHeight="5dp" />
    </RelativeLayout>

</LinearLayout>