<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/hot_title"
            android:background="#FF0000" />

        <TextView
            android:id="@+id/hot_title"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/characteristic_market"
            android:textColor="#FF0000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/hot_title"
            android:background="#FF0000" />
    </RelativeLayout>

    <RelativeLayout style="@style/main_rl" >

        <ImageView
            android:id="@+id/main_iv_1f"
            style="@style/main_iv_left"
            android:background="@drawable/f_1" />

        <TextView
            android:id="@+id/main_tv_1f_name"
            style="@style/main_tv_name"
            android:layout_toRightOf="@+id/main_iv_1f"
            android:text="@string/ladies" />

        <ImageView
            android:id="@+id/main_iv_1f_right"
            style="@style/iv_right"
            android:background="@drawable/f_r_1" />
    </RelativeLayout>

</LinearLayout>