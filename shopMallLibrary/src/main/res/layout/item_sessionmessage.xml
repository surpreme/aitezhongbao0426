<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_left_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_left_nikename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_left_icon"
            android:text="nikeName"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_left_nikename"
            android:layout_marginRight="80dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/iv_left_icon">

            <TextView
                android:id="@+id/tv_centext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bubble_1"
                android:padding="5dp"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/fx_bg"
                android:scaleType="matrix" />



        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
