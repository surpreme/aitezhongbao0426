<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:id="@+id/ll_item"
                                             android:padding="@dimen/dp_6"
    >


        <ImageView
            android:id="@+id/iv_tx"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_margin="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter"
            android:src="@drawable/no_image" />
    <TextView
        android:id="@+id/complaint_goodname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="2"
        android:text="商品名称"
        android:textColor="@color/wxcolor"
        app:layout_constraintLeft_toRightOf="@+id/iv_tx"
        app:layout_constraintTop_toTopOf="@+id/iv_tx"
        android:layout_marginStart="@dimen/dp_6"
        android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_storename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            app:layout_constraintLeft_toLeftOf="@+id/complaint_goodname_tv"
            app:layout_constraintTop_toBottomOf="@+id/complaint_goodname_tv"
            android:text="商家 : "
            android:textColor="@color/gray"
            android:textSize="14sp" />
    <TextView
        android:id="@+id/tv_complian_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="@+id/iv_tx"
            app:layout_constraintTop_toBottomOf="@+id/iv_tx"
            android:layout_marginTop="@dimen/dp_10"
        android:lines="1"
        android:text="投诉主题"
        android:textColor="@color/gray"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="投诉时间"
        android:textColor="@color/gray"
        app:layout_constraintLeft_toLeftOf="@+id/tv_complian_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_complian_title"
        android:layout_marginTop="@dimen/dp_3"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="处理状态"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        android:layout_marginTop="@dimen/dp_3"
        />


        <TextView
            android:id="@+id/tv_ck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/examine"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:background="@color/commRed"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_state"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/tv_qx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:background="@color/backColor"
            android:textColor="@color/defaultTextColor"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/tv_ck"
            app:layout_constraintRight_toLeftOf="@+id/tv_ck"
            android:layout_marginEnd="@dimen/dp_10"
            />

</androidx.constraintlayout.widget.ConstraintLayout>