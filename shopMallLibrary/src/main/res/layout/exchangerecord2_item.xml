<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView
            android:id="@+id/iv_gimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_jfgname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_gimg"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_gimg"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_jfnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_jfgname"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_gimg"
            android:text="@string/verification_prompt19"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_jfintegral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_jfnum"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_gimg"
            android:text="@string/verification_prompt20"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_jftime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_jfintegral"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_gimg"
            android:text="@string/evaluation_tips32"
            android:textSize="12sp" />

</RelativeLayout>
