<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_img"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="#0279B9"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_img"
        android:textColor="@color/txtcolor"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_pf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_img"
        android:layout_marginTop="10dp"
        android:text="@string/find_reminder291"
        android:textColor="@color/txtcolor"
        android:textSize="12sp" />

    <RatingBar
        android:id="@+id/re_grade"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_below="@+id/tv_pf"
        android:layout_marginTop="5dp"
        android:rating="5"
        android:progressDrawable="@drawable/room_rating_bar" >
    </RatingBar>

    <TextView
        android:id="@+id/tv_pj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_grade"
        android:layout_marginTop="10dp"
        android:text="@string/find_reminder292"
        android:textColor="@color/txtcolor"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_con"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_pj"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:background="@drawable/ed_input"
        android:padding="5dp"
        android:textSize="12sp" />

</RelativeLayout>