<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#38373C">

        <LinearLayout
            android:id="@+id/ll_break"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/fanhui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/tv_search"
            android:layout_toRightOf="@+id/ll_break"
            android:background="@drawable/courierhome6">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:src="@drawable/jd_search" />

            <EditText
                android:id="@+id/et_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/iv_voice"
                android:layout_toRightOf="@+id/iv_search"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_voice"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/courier_voice" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_below="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_menu1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="客户名单"/>
        <TextView
            android:id="@+id/tv_menu2"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="VIP客户"/>
        <TextView
            android:id="@+id/tv_menu3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="会员"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_choose"
        android:layout_below="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:weightSum="3"
        android:orientation="horizontal">
        <View
            android:id="@+id/v_slide1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#17B8FF"/>

        <View
            android:id="@+id/v_slide2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:background="#17B8FF"/>

        <View
            android:id="@+id/v_slide3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:background="#17B8FF"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/ll_choose"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/zt"
            android:divider="@color/transparent"
            android:dividerHeight="1dp"
            android:scrollbars="none">
        </ListView>

        <courier.View.ZmTest
            android:id="@+id/zt"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp" />
        <TextView
            android:id="@+id/tv_zm"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/zt"
            android:background="@drawable/courierhome3"
            android:gravity="center"
            android:text="A"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="25dp" />


        <LinearLayout
            android:id="@+id/ll_null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_slide"
            android:gravity="center"
            android:clickable="true"
            android:background="#F8F8F8"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/couriersend_null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="您当前还没有相关的记录哦~T_T~"
                android:textColor="#D1D1D1"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_volume"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:src="@drawable/volume1"/>
</RelativeLayout>
