<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sgz="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:background="@color/gainsboro"
    android:orientation="vertical" >

    <include layout="@layout/include_titile_sort" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:layout_marginTop="@dimen/album_dp_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:background="@color/white"
                android:text="@string/customerservice5"
                android:textSize="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gainsboro" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/dp_10"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_type1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/customerservice6"
                    android:textColor="#FD4646" />

                <TextView
                    android:id="@+id/tv_type2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/customerservice7"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_type3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/customerservice8"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <com.aite.a.view.MyShiGuangZhou
                android:id="@+id/msgz_progress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                sgz:number="3"
                sgz:progress="1"
                sgz:radiuss="20" />

            <!-- 咨询详情查看start-->
            <LinearLayout
                android:id="@+id/ll_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="@string/customerservice22"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/tv_customertype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gainsboro" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="@string/customerservice23"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/tv_customercentent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gainsboro" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="@string/customerservice24"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/tv_customertime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gainsboro" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="@string/customerservice25"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/tv_customerstat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/gray" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ll_hfnr"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="@string/customerservice26"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/tv_replycentent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <View
                    android:id="@+id/v_hf"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gainsboro" />
            </LinearLayout>

            <!-- 提交 -->
            <!--创建咨询单start-->
            <LinearLayout
                android:id="@+id/ll_tj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white"
                    android:layout_margin="@dimen/dp_10"
                    android:paddingStart="10dp" >

                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_centerVertical="true"
                        android:text="@string/customerservice9" />

                    <TextView
                        android:id="@+id/tv_xztype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/tv_1"
                        android:paddingBottom="10dp"
                        android:layout_centerVertical="true"
                        android:paddingTop="10dp"
                        android:textColor="@color/text_color"
                        android:text="@string/customerservice10" />

                    <LinearLayout
                        android:id="@+id/ll_menu"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tv_xztype"
                        android:layout_below="@+id/tv_xztype"
                        android:background="@drawable/gray_hollow"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/tv_t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/customerservice13" />

                        <TextView
                            android:id="@+id/tv_t2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="@string/customerservice11" />

                        <TextView
                            android:id="@+id/tv_t3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/customerservice12" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/tv_3"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/arrow_next"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:text="@string/customerservice14"
                        android:textColor="@color/red" />
                        <!--android:layout_toRightOf="@+id/tv_xztype"-->
                        <!--android:layout_alignTop="@+id/tv_1"-->

                    <TextView
                        android:id="@+id/tv_ts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tv_xztype"
                        android:layout_below="@+id/tv_xztype"
                        android:layout_marginTop="5dp"
                        android:gravity="left"
                        android:text="@string/customerservice15"
                        android:textColor="@color/gray"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gainsboro" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="vertical"
                        android:padding="@dimen/dp_10"
                    >

                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/customerservice17" />

                    <EditText
                        android:id="@+id/ed_centent"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="@dimen/dp_6"
                        android:layout_marginTop="@dimen/dp_6"
                        android:background="@drawable/gray_hollow"
                        android:hint="请填写咨询内容"
                        android:ellipsize="end"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gainsboro" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:text="@string/customerservice20"
                android:textSize="15dp"
                android:textColor="#C09853"/>

          <!--  <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gainsboro" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/customerservice21"
                android:textColor="#C09853" />


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/tv_submittj"
            android:layout_height="40dp"
            android:layout_width="@dimen/dp_150"
            android:background="@drawable/shape_gray"
            android:gravity="center"
            android:layout_margin="@dimen/dp_10"
            android:text="@string/customerservice18"
            android:textColor="@color/white"

            />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/dp_150"
            android:layout_height="40dp"
            android:background="@drawable/share_red"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/customerservice19"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>