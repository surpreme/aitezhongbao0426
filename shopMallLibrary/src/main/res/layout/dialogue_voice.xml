<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/ib_press_speak" >

        <TextView
            android:id="@+id/tv_press_speak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/press_speak"
            android:textColor="@color/gray"
            android:textSize="14sp" />
        <!-- 时间 -->

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <View
                android:id="@+id/v_z1"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/v_z2"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/v_z3"
                android:layout_width="2dp"
                android:layout_height="5dp"
                android:layout_marginRight="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/v_z4"
                android:layout_width="2dp"
                android:layout_height="5dp"
                android:layout_marginRight="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/v_z5"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/v_z6"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/v_z7"
                android:layout_width="2dp"
                android:layout_height="10dp"
                android:layout_marginRight="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/v_z8"
                android:layout_width="2dp"
                android:layout_height="12dp"
                android:layout_marginRight="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/v_z9"
                android:layout_width="2dp"
                android:layout_height="10dp"
                android:layout_marginRight="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/v_z10"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:background="@color/orange" />
            <!-- 计时 -->

            <TextView
                android:id="@+id/tv_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="0"
                android:textColor="#888"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="#888"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_seconds1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#888"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_seconds2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="0"
                android:textColor="#888"
                android:textSize="13sp" />

            <View
                android:id="@+id/v_y1"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/v_y2"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/v_y3"
                android:layout_width="2dp"
                android:layout_height="5dp"
                android:layout_marginRight="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/v_y4"
                android:layout_width="2dp"
                android:layout_height="5dp"
                android:layout_marginRight="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/v_y5"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/v_y6"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/v_y7"
                android:layout_width="2dp"
                android:layout_height="10dp"
                android:layout_marginRight="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/v_y8"
                android:layout_width="2dp"
                android:layout_height="12dp"
                android:layout_marginRight="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/v_y9"
                android:layout_width="2dp"
                android:layout_height="10dp"
                android:layout_marginRight="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/v_y10"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:background="@color/orange" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/ib_press_speak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/press_speak" />

    <ImageView
        android:id="@+id/iv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_buuton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/speak_point" />

    <LinearLayout
        android:id="@+id/ll_buuton"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_voice"
            android:textColor="@color/gray"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/intercom"
            android:textColor="#44C0F9"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recording_voice"
            android:textColor="@color/gray"
            android:textSize="11sp" />
    </LinearLayout>

</RelativeLayout>