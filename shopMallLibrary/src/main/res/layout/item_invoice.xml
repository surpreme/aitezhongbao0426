<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_item"
    android:background="@color/white">

    <CheckBox
        android:id="@+id/cb_ordinary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:button="@drawable/checkboxtu"
        android:checked="false"
        android:enabled="false"
        android:layout_centerVertical="true" />


    <TextView
        android:id="@+id/tv_cen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/txtcolor"
        android:layout_toLeftOf="@+id/tv_del"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/cb_ordinary"
        android:text="@string/invoice3"/>
    <TextView
        android:id="@+id/tv_del"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="@string/order_reminder162"
        android:layout_marginRight="10dp"
        android:textColor="#E46F00"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
