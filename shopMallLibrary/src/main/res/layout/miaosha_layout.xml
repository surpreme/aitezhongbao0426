<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/miaosha_iv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:background="@drawable/time" />

    <TextView
        android:id="@+id/miaosha_tv_time"
        style="@style/product_black_text"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/miaosha_iv_time"
        android:drawablePadding="5dp"
        android:text="@string/palm_spike"
        android:textColor="@color/cursor_text" />

    <TextView
        android:id="@+id/miaosha_tv_show_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/miaosha_tv_time"
        android:textColor="@color/cursor_text"
        android:textSize="@dimen/text_size_12" />

</RelativeLayout>