<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include 
        android:id="@+id/i_title"
        layout="@layout/include_phone_title"/>
    
    <FrameLayout
        android:id="@+id/fm_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/i_title"
        android:layout_above="@+id/v_fenge" />

    <View
        android:id="@+id/v_fenge"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/ll_information_menu"
        android:background="@color/gainsboro" />

    <LinearLayout
        android:id="@+id/ll_information_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp" >

        <LinearLayout
            android:id="@+id/ll_menu_mall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_menu_mall"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/mall1" />

            <TextView
                android:id="@+id/tv_menu_mall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/mall"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu_information"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_menu_information"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/information2" />

            <TextView
                android:id="@+id/tv_menu_information"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/news"
                android:textColor="@color/red"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu_found"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_menu_found"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/found1" />

            <TextView
                android:id="@+id/tv_menu_found"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/goodthings"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu_community"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_menu_community"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/community1" />

            <TextView
                android:id="@+id/tv_menu_community"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/community"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>