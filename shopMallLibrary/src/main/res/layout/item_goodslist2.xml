<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_goodsimg"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_goodsimg"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="@dimen/dp_6"
            android:ellipsize="end"
            android:gravity="top"
            android:lines="2"
            android:text="冬季外套男中长款棉衣加绒加厚潮流帅气韩版棉袄2017新款羽绒棉服"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/rmb_sign"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:text="0.00"
            android:textColor="#F23131"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/rmb_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_alignBottom="@+id/tv_price"
            android:layout_marginBottom="@dimen/dp_2"
            android:text="¥"
            android:textColor="#F23131"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            android:text="销量 0"
            android:textColor="@color/text_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_volume"
            android:layout_marginRight="5dp"
            android:text="@string/order_reminder161"
            android:textColor="#F23131"
            android:textSize="11sp" />

    </RelativeLayout>
</RelativeLayout>
