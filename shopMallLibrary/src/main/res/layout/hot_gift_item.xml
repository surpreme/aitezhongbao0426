<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:background="#FAFAFA">

    <ImageView
        android:id="@+id/iv_gift_image"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="140dp" />

    <TextView
        android:id="@+id/tv_gift_goodsname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_gift_image"
        android:layout_marginBottom="5dp"
        android:lines="2"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="红豆（Hodo）男装 2016春款男士纯色经典商务正装"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/iv_gift_level"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tv_costnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gift_goodsname"
        android:layout_marginLeft="5dp"
        android:text="11.00"
        android:textColor="#E2312F" />

    <TextView
        android:id="@+id/tv_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_costnum"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="1666分"
        android:textColor="#E2312F"
        android:textSize="10sp" />

</RelativeLayout>