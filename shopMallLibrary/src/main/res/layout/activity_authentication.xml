<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/include_titile_sort" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#ffeeeeee"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/evaluation_tips21"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/evaluation_tips22"
                    android:textColor="#333333"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/evaluation_tips23"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/ed_zsname"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:background="@drawable/ed_input"
                    android:paddingLeft="5dp"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/evaluation_tips24"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/iv_identityimg"
                        android:layout_width="200dp"
                        android:layout_height="134dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/identity_card"
                         />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_identityimg"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        >

                        <Button
                            android:id="@+id/bt_xz"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="@string/et_choose"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv_filename"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:text="@string/evaluation_tips25"
                            android:textSize="12dp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/evaluation_tips26"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/iv_zzimg"
                        android:layout_width="200dp"
                        android:layout_height="140dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/business_license"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_zzimg"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <Button
                            android:id="@+id/bt_xz2"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="@string/et_choose"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv_zzfilename"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:text="@string/evaluation_tips25"
                            android:textSize="12dp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/evaluation_tips28"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/waiting_for_audit"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_present"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/chat_reportbt"
                android:gravity="center"
                android:text="@string/evaluation_tips27"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>