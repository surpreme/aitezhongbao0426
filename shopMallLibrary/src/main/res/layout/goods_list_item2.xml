<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/list_iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/list_tv_content"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="@string/fruit"
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/list_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:text="200.0"
            android:textColor="@color/cursor_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/list_tv_"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/list_tv_price"
            android:text="ï¿¥"
            android:textColor="@color/cursor_text"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>