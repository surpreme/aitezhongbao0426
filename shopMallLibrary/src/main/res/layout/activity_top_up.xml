<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/include_titile_sort" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp" >

        <TextView
            android:id="@+id/online_top_up"
            style="@style/goods_details_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="在线充值"
            android:textColor="@color/cursor_text" />

        <View
            style="@style/view_height"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/top_up_detail"
            style="@style/goods_details_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="充值明细" />

        <View
            style="@style/view_height"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/card_balance"
            style="@style/goods_details_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="充值卡余额" />

        <View
            style="@style/view_height"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/card_top_up"
            style="@style/goods_details_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="充值卡充值" />

    </LinearLayout>

    <View style="@style/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp" >

        <View
            android:id="@+id/sliding"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/red" />
    </LinearLayout>

    <ImageView
        android:id="@+id/goods_evaluation_iv_cursor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:src="@drawable/cursor"
        android:visibility="gone" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/personal_order_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="8dp" />
</LinearLayout>