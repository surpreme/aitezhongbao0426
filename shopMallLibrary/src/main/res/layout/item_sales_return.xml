<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ed_input"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/tv_refundnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退货退款编号 : "
            android:textColor="@color/wxcolor"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_storename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="店铺名称 : "
            android:textColor="@color/defaultTextColor"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请时间 : "
            android:layout_marginTop="5dp"
            android:textColor="@color/defaultTextColor"
            android:textSize="14sp" />

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#e2e2e2" />-->

        <com.aite.a.view.MyListView
            android:id="@+id/mv_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:divider="@color/gainsboro"
            android:visibility="gone"
            android:dividerHeight="1dp"/>

        <TextView
            android:id="@+id/tv_refundwhy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="退货原因 : "
            android:textColor="@color/defaultTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_refundexplain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="退货退款说明 : "
            android:textColor="@color/defaultTextColor"
            android:textSize="14sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/return_goods_iv"
                android:layout_margin="@dimen/dp_10"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"/>
            <TextView
                android:id="@+id/return_goods_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/return_goods_iv"
                android:layout_alignTop="@+id/return_goods_iv"
                android:textSize="14sp"
                android:textColor="@color/wxcolor"
                android:text="dfsgdsa撒旦发个过热个人"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_refundprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="退款金额 : "
            android:textColor="@color/defaultTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_refundshuliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="退货数量 : "
            android:textColor="@color/defaultTextColor"
            android:visibility="gone"
            android:textSize="14sp" />
