<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/rl_item"
    android:padding="10dp" >

    <com.aite.a.view.CircleImageView
        android:id="@+id/cv_img"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="name"
        android:layout_toRightOf="@+id/cv_img"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/tv_recommended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="@string/distribution_center19"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/cv_img"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/tv_consumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="@string/distribution_center20"
        android:layout_below="@+id/tv_recommended"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/cv_img"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/tv_commission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="@string/distribution_center21"
        android:layout_below="@+id/tv_consumption"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/cv_img"
        android:textSize="12sp" />

</RelativeLayout>