<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="10dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/my_redpackage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额 : ￥0.0（微信红包提现--未发放）"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_rob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="发红包了快来抢啊"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="领取时间 : 2017-03-24 17:47:39"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/rl_item"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tv_ye"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/share_red"
            android:gravity="center"
            android:text="@string/find_reminder297"
            android:layout_marginRight="15dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_wx"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/share_yellow"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:text="@string/wxenvelope"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>