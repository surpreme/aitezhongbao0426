<!-- 标签的背景 label_bg -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 标签选中时的背景 -->
    <item android:state_selected="true">
        <shape>
            <corners android:radius="50dp" />
            <stroke android:width="1dp" android:color="#fb435b"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <!-- 标签的正常背景 -->
    <item>
        <shape>
            <corners android:radius="50dp" />
            <stroke android:width="1dp" android:color="#fb435b"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</selector>