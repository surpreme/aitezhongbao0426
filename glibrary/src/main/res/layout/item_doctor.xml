<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:padding="@dimen/dp_12"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@color/yelllow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text1"
                    android:textSize="@dimen/text16" />


                <TextView
                    android:id="@+id/tv_doctor_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:textColor="@color/glaytxt"
                    android:textSize="@dimen/text13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/doctor_bg">

                <TextView
                    android:id="@+id/tv_hospital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingTop="5dp"
                    android:paddingRight="@dimen/dp_4"
                    android:paddingBottom="5dp"
                    android:textColor="#00BFBF"
                    android:textSize="@dimen/dp_12" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="坐诊医院：广州中医药大学固生堂深圳罗湖..."
                android:textColor="@color/text1"
                android:textSize="@dimen/text16" />


            <TextView
                android:id="@+id/tv_good_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_12"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="擅长：儿童过敏性疾病（过敏性咳嗽、慢性腹..."
                android:textColor="@color/glaytxt"
                android:textSize="@dimen/text13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:maxLines="1"
                    android:id="@+id/tv_grade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/glaytxt"
                    android:textSize="@dimen/text12" />

                <TextView
                    android:maxLines="1"
                    android:id="@+id/tv_subscribe_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/glaytxt"
                    android:textSize="@dimen/text12" />


                <TextView
                    android:maxLines="1"
                    android:id="@+id/tv_consult_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/glaytxt"
                    android:textSize="@dimen/text12" />


                <TextView
                    android:maxLines="1"
                    android:id="@+id/tv_reply_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/glaytxt"
                    android:textSize="@dimen/text12" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/noglay"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>

